<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- Cfg DriverManagerDataSource  -->
   <bean id="drds"  class="org.springframework.jdbc.datasource.DriverManagerDataSource"  scope="singleton">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql:///NTSP612DB"/>
        <property name="username" value="root"/>
        <property name="password" value="root"/>
   </bean>
   
    <!--DAO class cfg  -->
     <bean id="studDAO"  class="com.nt.dao.StudentDAOImpl" scope="singleton" autowire="constructor"/>
         
      
</beans>
